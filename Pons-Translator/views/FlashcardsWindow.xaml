<Window x:Class="Pons_Translator.views.FlashcardsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pons_Translator.views"
        mc:Ignorable="d"
        Title="FlashcardsWindow" Height="200" Width="300">
    <Grid>
        <ComboBox Name="cbCategories" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272"/>
        <Label Name="lblCardContent" Content="word name" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="272" Height="89"/>
        <Button Name="btnFlip" Content="Flip" HorizontalAlignment="Left" Margin="10,132,0,0" VerticalAlignment="Top" Width="96" Height="27" Click="btnFlip_Click"/>
        <Button Name="btnCorrect" Content="Correct" HorizontalAlignment="Left" Height="27" Margin="111,132,0,0" VerticalAlignment="Top" Width="86" Click="btnCorrect_Click"/>
        <Button Name="btnWrong" Content="Wrong" HorizontalAlignment="Left" Height="27" Margin="202,132,0,0" VerticalAlignment="Top" Width="80" Click="btnWrong_Click"/>
    </Grid>
</Window>